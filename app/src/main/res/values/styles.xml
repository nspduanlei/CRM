<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorMain</item>
    </style>

    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/titleColor</item>
        <item name="actionMenuTextColor">@color/titleColor</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:minHeight">@dimen/top_bar_height</item>
        <!--<item name="android:background">@drawable/navigationbar_background</item>-->
        <item name="android:background">@color/colorWhite</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <style name="MenuDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--输入框样式-->
    <style name="EditTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/common_font_size</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>


    <!--登录输入框样式-->
    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorBgEdit</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/color_1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <!--主页title样式-->
    <style name="MainTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
    </style>

    <!--form fragment 样式-->
    <style name="FormFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_left</item>
        <item name="android:paddingRight">@dimen/margin_left</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <!--form title 样式-->
    <style name="FormTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">@dimen/margin_left</item>
        <item name="android:background">@color/titleBgColor</item>
        <item name="android:paddingLeft">@dimen/margin_left</item>
    </style>

    <!--地区选择-->
    <style name="btn_style_radio_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_selector_text_1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_selector_1</item>
    </style>

    <!--button 样式-->
    <style name="btn_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_left</item>
        <item name="android:background">@drawable/button_bg_1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--显示客户资料-->
    <style name="fl_style_show">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_left</item>
        <item name="android:paddingRight">@dimen/margin_left</item>
        <item name="android:paddingTop">6dp</item>
    </style>
    <style name="tv_style_show">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/commonColor</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/common_font_size</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
