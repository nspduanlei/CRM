<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/commonColor</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/titleColor</item>
        <item name="actionMenuTextColor">@color/titleColor</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:minHeight">@dimen/top_bar_height</item>
        <item name="android:background">@drawable/navigationbar_background</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <style name="MenuDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--输入框样式-->
    <style name="EditTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">@dimen/common_font_size</item>
        <item name="android:gravity">right</item>
    </style>


</resources>
