<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp">

        <com.apec.crm.views.widget.RoundTextView
            android:id="@+id/roundTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="QQ"
            android:textColor="@color/colorWhite"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fl_head"
        android:layout_toRightOf="@id/fl_head"
        android:text="fafafafasf"
        android:textColor="@color/nameColor"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_custom_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/fl_head"
        android:text="fasfasfasfafasfasfsfasffadfasfas"
        android:textColor="@color/commonColor"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/fl_head"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginTop="5dp"
        android:text="dfafasf"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/tip_font_size"/>

    <TextView
        android:id="@+id/tv_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_left"
        android:drawableTop="@drawable/btn_pick_drawable"
        android:text="拾取"
        android:textColor="@color/colorMain"
        android:textSize="12sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fl_head"
        android:background="@color/lineColor"/>

</RelativeLayout>