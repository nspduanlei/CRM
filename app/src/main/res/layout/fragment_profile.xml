<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/pageBgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            style="@style/MainTitleStyle"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="我"/>
        <include
            layout="@layout/layout_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_head"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="刘敏敏"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:text="销售部门-销售经理"
            android:textColor="@color/commonColor"/>

        <FrameLayout
            android:id="@+id/fl_cache"
            style="@style/FormFragmentStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空缓存"
                android:textColor="@color/commonColor"/>

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="12M"
                android:textColor="@color/titleColor"/>
        </FrameLayout>

        <include
            layout="@layout/layout_line"/>

        <FrameLayout
            android:id="@+id/fl_version"
            style="@style/FormFragmentStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号"
                android:textColor="@color/commonColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_find_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_notify_bg"
                    android:padding="3dp"
                    android:text="发现新版本"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12M"
                    android:textColor="@color/titleColor"/>
            </LinearLayout>

        </FrameLayout>

        <include
            layout="@layout/layout_line"/>

        <FrameLayout
            android:id="@+id/fl_modify_password"
            style="@style/FormFragmentStyle">
            <TextView
                android:id="@+id/tv_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="@color/commonColor"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/triangle"/>
        </FrameLayout>

        <include
            layout="@layout/layout_line"/>

        <Button
            android:id="@+id/btn_login_out"
            style="@style/btn_style_1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:text="退出登录"/>
    </LinearLayout>


</FrameLayout>