<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <include
        layout="@layout/top_bar_layout"/>

    <FrameLayout
        android:id="@+id/fl_area"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行政区域"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_area"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/arrow_down"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>

    <FrameLayout
        android:id="@+id/fl_type"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户类型"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_custom_type"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>


    <FrameLayout
        android:id="@+id/fl_level"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户分类"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_custom_level"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>

    <FrameLayout
        android:id="@+id/fl_state"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户状态"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_custom_state"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>

    <FrameLayout
        android:id="@+id/fl_class"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品类"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_custom_class"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>

    <FrameLayout
        android:id="@+id/fl_user"
        style="@style/FormFragmentStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属人"
            android:textColor="@color/colorFormTitle"
            android:textSize="@dimen/common_font_size"/>
        <TextView
            android:id="@+id/tv_user"
            style="@style/EditTextStyle"
            android:layout_marginRight="15dp"
            android:hint="全部"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        android:id="@+id/user_line"
        layout="@layout/layout_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_2"
            android:text="重置"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_1"
            android:text="确定"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


</LinearLayout>