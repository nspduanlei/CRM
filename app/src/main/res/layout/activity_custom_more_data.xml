            android:layout_marginRight="15dp"
            android:hint="请选择类型"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <include
        layout="@layout/layout_line"/>

